{
    "compilerOptions": {
        // "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "./lib",
        "skipLibCheck": true,
        "types": [
            "node"
        ],
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
